# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = false
insert_final_newline = false

[*.{md,json,yml}]
indent_size = 2
max_line_length = off
insert_final_newline = true

[*.{ts,cs,scss}]
indent_size = 2
trim_trailing_whitespace = true
insert_final_newline = true

[*.ts]
quote_type = single